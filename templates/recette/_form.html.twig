{{ form_start(form) }}
<div class="form-floating mb-4">
    {{ form_widget(form.title) }}
    {{ form_label(form.title) }}
</div>
<div class="d-flex justify-content-around category-picture mb-4">
    <div class="d-flex flex-column form-floating mb-4">
        {{ form_widget(form.category) }}
        {{ form_label(form.category) }}

    </div>
    <div>
        {{ form_label(form.pictureFile) }}
        {{ form_widget(form.pictureFile) }}
    </div>
</div>
    <div class="form-floating mb-4">
        {{ form_widget(form.description) }}
        {{ form_label(form.description) }}
    </div>
    <div class="form-floating mb-4">
        {{ form_widget(form.ingredient) }}
        {{ form_label(form.ingredient) }}
    </div>
    <div class="form-floating mb-4">
        {{ form_widget(form.step) }}
        {{ form_label(form.step) }}
    </div>
    {{ form_widget(form) }}
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary mb-3">{{ button_label|default('Sauvegarder') }}</button>
    </div>
